{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "lib": ["es2015","es2020"],
        "paths": {
            "": [
                "node_modules/",
                "src/types/"
            ],
            "*":["node_modules"]
        }
    },
    "include": 
        ["**/*", "src/**/*"]
}